---
apiVersion: grafana.integreatly.org/v1beta1
kind: GrafanaDatasource
metadata:
  name: {{ grafana_resource_name }}-{{ item.name | lower }}
spec:
  instanceSelector:
    matchLabels:
      {{ grafana_label_selector }}
  datasource:
    access: proxy
    name: {{ item.name }}
    type: {{ item.type }}
    url: {{ item.url }}
    isDefault: {{ item.default | default(false) }}
